<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <TextView
        android:id="@+id/texthelo"
        android:layout_width="65dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="153dp"
        android:text="Привет,"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textcreate"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="102dp"
        android:text="Создай аккаунт"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texthelo" />

    <EditText
        android:id="@+id/buttonfio"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/grayyt"
        android:gravity="left|center"
        android:hint="ФИО"
        android:textColorHint="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textcreate" />

    <EditText
        android:id="@+id/buttoncoll"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/grayyt"
        android:gravity="left|center"
        android:hint="Номер телефона"
        android:textSize="12dp"
        android:textColorHint="@color/black"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonfio" />

    <EditText
        android:id="@+id/buttonpot"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/grayyt"
        android:gravity="left|center"
        android:hint="Почта"
        android:textSize="12dp"
        android:textColorHint="@color/black"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoncoll" />

    <EditText
        android:id="@+id/buttonpass"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/grayyt"
        android:gravity="left|center"
        android:hint="Пароль"
        android:textColorHint="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonpot" />

    <ImageView
        android:id="@+id/imagept"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonpass"
        app:srcCompat="@drawable/imagee" />

    <TextView
        android:id="@+id/textpolite"
        android:layout_width="289dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Продолжая, вы принимаете нашу Политику конфиденциальности и Условия использования."
        android:textColor="@color/graylite"
        app:layout_goneMarginTop="10dp"
        android:textSize="10dp"
        android:layout_marginStart="56dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonpass" />

    <EditText
        android:id="@+id/buttonreg"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:background="@drawable/gradient"
        android:hint="Зарегестрироваться"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="489dp" />

    <ImageView
        android:id="@+id/imagestrok"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="205dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonreg"
        app:srcCompat="@drawable/stroka" />

    <ImageView
        android:id="@+id/imagestroki"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonreg"
        app:srcCompat="@drawable/stroka" />

    <TextView
        android:id="@+id/textor"
        android:layout_width="26dp"
        android:layout_height="18dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="20dp"
        android:text="Или"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonreg"
        app:layout_goneMarginTop="10dp" />

    <ImageView
        android:id="@+id/imagegogle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textor"
        app:srcCompat="@drawable/gogle" />

    <ImageView
        android:id="@+id/imageyandx"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="203dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textor"
        app:srcCompat="@drawable/yandex" />

    <TextView
        android:id="@+id/textvxod"
        android:layout_width="140dp"
        android:layout_height="18dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:text="Имеете уже аккаунт?"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageyandx"
        app:layout_goneMarginTop="10dp" />

    <TextView
        android:id="@+id/textvxodi"
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="8dp"
        android:text="Войти"
        android:textColor="@color/greenlite"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageyandx"
        app:layout_goneMarginTop="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>